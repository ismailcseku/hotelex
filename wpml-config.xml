<?xml version="1.0" encoding="UTF-8"?>
<wpml-config>
	<!-- Custom Post Types -->
	<!-- All CPTs are registered by mascot-core-hotelex plugin -->
	<custom-types>
		<custom-type translate="1">footer</custom-type>
		<custom-type translate="1">header-top</custom-type>
		<custom-type translate="1">megamenu</custom-type>
		<custom-type translate="1">page-title</custom-type>
		<custom-type translate="1">portfolio-items</custom-type>
		<custom-type translate="1">projects</custom-type>
		<custom-type translate="1">side-push-panel</custom-type>
		<custom-type translate="1">custom_blocks</custom-type>
		<custom-type translate="1">custom_site_headers</custom-type>
	</custom-types>

	<!-- Taxonomies -->
	<taxonomies>
		<taxonomy translate="1">projects_category</taxonomy>
		<taxonomy translate="1">portfolio_category</taxonomy>
		<taxonomy translate="1">portfolio_tag</taxonomy>
		<taxonomy translate="1">custom_blocks_category</taxonomy>
	</taxonomies>

	<!-- Custom Fields -->
	<custom-fields>
		<!-- Menu Item Custom Fields -->
		<custom-field action="translate">_menu_item_mascot_dropdownposition</custom-field>
		<custom-field action="translate">_menu_item_mascot_megamenu_status</custom-field>
		<custom-field action="translate">_menu_item_mascot_megamenu_containerwidth</custom-field>
		<custom-field action="translate">_menu_item_mascot_megamenu_dropdownposition</custom-field>
		<custom-field action="translate">_menu_item_mascot_megamenu_bgimage</custom-field>
		<custom-field action="translate">_menu_item_mascot_subtitle</custom-field>
		<custom-field action="translate">_menu_item_mascot_menuicon</custom-field>
		<custom-field action="translate">_menu_item_mascot_custombadge</custom-field>
		<custom-field action="translate">_menu_item_mascot_megamenu_gridcolumnwidth</custom-field>
		<custom-field action="translate">_menu_item_mascot_megamenu_widgetarea</custom-field>

		<!-- Page Meta Box Settings -->
		<custom-field action="translate">hotelex_page_mb_sidebar_layout_settings</custom-field>
		<custom-field action="translate">hotelex_page_mb_slider_settings</custom-field>
		<custom-field action="translate">hotelex_page_mb_general_settings</custom-field>
		<custom-field action="translate">hotelex_page_mb_theme_color_settings</custom-field>
		<custom-field action="translate">hotelex_page_mb_header_settings</custom-field>
		<custom-field action="translate">hotelex_page_mb_logo_settings</custom-field>
		<custom-field action="translate">hotelex_page_mb_page_title_settings</custom-field>
		<custom-field action="translate">hotelex_page_mb_layout_settings</custom-field>
		<custom-field action="translate">hotelex_page_mb_footer_top_callout_settings</custom-field>
		<custom-field action="translate">hotelex_page_mb_footer_settings</custom-field>

		<!-- Portfolio Meta Box Settings -->
		<custom-field action="translate">hotelex_portfolio_mb_gallery_images_settings</custom-field>
		<custom-field action="translate">hotelex_portfolio_mb_layout_settings</custom-field>
		<custom-field action="translate">hotelex_portfolio_mb_checklist_settings</custom-field>
		<custom-field action="translate">hotelex_portfolio_mb_project_link_settings</custom-field>
		<custom-field action="translate">hotelex_portfolio_mb_other_settings</custom-field>

		<!-- Projects Meta Box Settings -->
		<custom-field action="translate">hotelex_projects_mb_settings</custom-field>

		<!-- Room Booking Meta Fields -->

		<!-- WooCommerce Room Booking Fields -->

		<!-- Elementor/Page Builder Fields -->
		<custom-field action="copy">_wpb_shortcodes_custom_css</custom-field>
		<custom-field action="copy">_elementor_data</custom-field>
		<custom-field action="copy">_elementor_page_settings</custom-field>
		<custom-field action="copy">_elementor_template_type</custom-field>
		<custom-field action="copy">_elementor_edit_mode</custom-field>
		<custom-field action="copy">_elementor_css</custom-field>
		<custom-field action="copy">_elementor_controls_usage</custom-field>
	</custom-fields>

	<!-- Admin Texts (Redux Framework Options) -->
	<admin-texts>
		<key name="hotelex_redux_theme_opt">
			<!-- General Settings -->
			<key name="general-settings-favicon" />
			<key name="general-settings-apple-touch-144" />
			<key name="general-settings-apple-touch-114" />
			<key name="general-settings-apple-touch-72" />
			<key name="general-settings-apple-touch-32" />
			<key name="general-settings-enable-responsive" />
			<key name="general-settings-enable-backtotop" />
			<key name="general-settings-enable-gsap-animation-by-default" />
			<key name="general-settings-smooth-scroll" />
			<key name="general-settings-enable-element-animation-effect" />

			<!-- Logo Settings -->
			<key name="logo-settings-site-brand" />
			<key name="logo-settings-want-to-use-logo" />
			<key name="logo-settings-switchable-logo" />
			<key name="logo-settings-logo-default" />
			<key name="logo-settings-logo-default-dark-bg" />
			<key name="logo-settings-logo-primary" />
			<key name="logo-settings-logo-on-sticky" />
			<key name="logo-settings-logo-margin-around" />
			<key name="logo-settings-logo-sticky-margin-around" />
			<key name="logo-settings-admin-login-logo" />

			<!-- Theme Color Settings -->
			<key name="theme-color-settings-theme-color-type" />
